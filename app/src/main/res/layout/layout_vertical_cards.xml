<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="80dp"
    android:layout_marginTop="80dp"
    android:layout_marginEnd="80dp"
    app:cardCornerRadius="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageItinerarioVertical"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/titoloTextVertical"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:gravity="center"
            android:text="Itinerario" />


        <ImageView
            android:id="@+id/imageDurataVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"

            android:layout_marginTop="27dp"
            app:srcCompat="@drawable/ic_clock" />

        <ImageView
            android:id="@+id/imagePunteggioVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"

            android:layout_marginTop="27dp"
            app:srcCompat="@drawable/ic_star" />

        <ImageView
            android:id="@+id/imageDifficoltaVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"

            android:layout_marginTop="27dp"
            app:srcCompat="@drawable/ic_icon_difficulty" />

        <TextView
            android:id="@+id/durataTextVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageDurataVertical"
            android:layout_marginLeft="100dp"
            android:text="min"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/punteggioTextVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagePunteggioVertical"
            android:layout_marginLeft="160dp"
            android:text="n"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/difficoltaTextVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagePunteggioVertical"
            android:text="n"
            android:layout_marginLeft="208dp"
            android:textSize="13sp" />




    </RelativeLayout>



</androidx.cardview.widget.CardView>