<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.BottomSheetAggiungi"

    android:background="@drawable/drawable_round_bottom_sheet"

    android:orientation="vertical"
    android:padding="16dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="90dp"

    android:elevation="56dp"
    android:layout_marginBottom="50dp"

    app:layout_anchorGravity="bottom"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"

    android:clipToPadding="false"
    android:paddingBottom="20dp" >


    <TextView
        android:id="@+id/AggiungiText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="Aggiungi Itinerario"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/manualeTextAggiungi"
        android:layout_width="232dp"
        android:layout_height="29dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="25dp"
        android:color="#0f3444"
        android:drawableLeft="@android:drawable/ic_menu_add"
        android:drawablePadding="13dp"
        android:drawableTint="#26d8c3"
        android:text="Inserimento manuale"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AggiungiText" />

    <TextView
        android:id="@+id/tracciaTextAggiungi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:drawableLeft="@android:drawable/ic_menu_mylocation"
        android:drawablePadding="13dp"
        android:drawableTint="#26d8c3"
        android:text="Traccia con GPS"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manualeTextAggiungi" />

    <ImageButton
        android:id="@+id/closeBottomSheetAdd"
        android:layout_width="29dp"
        android:layout_height="27dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>